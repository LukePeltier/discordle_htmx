package home

import "github.com/lukepeltier/discordle/internal/templates/layout"

templ Home() {
	@layout.Layout("Discordle") {
		<div class="hero bg-base-200 min-h-screen">
			<div class="hero-content text-center">
				<div class="max-w-md">
					<h1 class="text-5xl font-bold">Discordle</h1>
					<p class="py-6">Play Discordle now</p>
					<button class="btn btn-primary">Play</button>
				</div>
			</div>
		</div>
	}
}
